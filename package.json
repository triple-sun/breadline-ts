{
	"name": "breadline-ts",
	"version": "1.1.0",
	"description": "Queue manager for async operations",
	"main": "build/index.js",
	"engines": {
		"node": ">18"
	},
	"scripts": {
		"test": "jest",
		"build": "rimraf build && tsc",
		"format": "biome format --write",
		"lint": "biome lint",
		"prepare": "husky",
		"prepublishOnly": "rimraf build && tsc && husky && jest"
	},
	"files": [
		"build"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/triple-sun/breadline.git"
	},
	"keywords": [
		"async",
		"queue",
		"queue-manager",
		"task-queue-manager",
		"task-priority-manager",
		"task-manager",
		"priority-queue",
		"priority-manager",
		"pqueue"
	],
	"author": "Simon Kononets <sploit.strannik@gmail.com>",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/triple-sun/breadline/issues"
	},
	"homepage": "https://github.com/triple-sun/breadline#readme",

	"devDependencies": {
		"@biomejs/biome": "2.3.10",
		"@types/jest": "^30.0.0",
		"@types/node": "^22.9.0",
		"husky": "^9.1.7",
		"jest": "^30.2.0",
		"lint-staged": "^16.2.7",
		"rimraf": "^6.1.2",
		"ts-jest": "^29.2.5",
		"ts-node": "^10.9.2",
		"typescript": "^5.9.3"
	},
	"dependencies": {
		"eventemitter3": "^5.0.4"
	},
	"lint-staged": {
		"*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}": [
			"biome check --files-ignore-unknown=true",
			"biome check --write --no-errors-on-unmatched"
		],
		"*": [
			"biome check --no-errors-on-unmatched --files-ignore-unknown=true"
		]
	}
}
