{
  "name": "breadline",
  "version": "0.0.1",
  "description": "Queue manager for async operations",
  "main": "dist/index.js",
  "scripts": {
    "test": "jest",
    "build": "rimraf build && tsc",
    "format": "npx @biomejs/biome format ./src --write",
    "lint": "npx @biomejs/biome lint ./src"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/triple-sun/breadline.git"
  },
  "keywords": [
    "async",
    "queue",
    "queue-manager",
    "task-queue-manager"
  ],
  "author": "Simon Kononets <sploit.strannik@gmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/triple-sun/breadline/issues"
  },
  "homepage": "https://github.com/triple-sun/breadline#readme",
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@biomejs/biome": "2.3.11",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.9.0",
    "jest": "^29.0.0",
    "rimraf": "^5.0.10",
    "ts-jest": "^29.2.5",
    "typescript": "^5.9.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    }
  },
  "dependencies": {
    "eventemitter3": "^5.0.1"
  }
}
